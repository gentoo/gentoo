depend() {
	need localmount
}

start() {
	chown smsd:sms /var/log/smsd.log
	ebegin "Starting smsd"
	start-stop-daemon -b -u smsd:sms --start --exec /usr/bin/smsd -- \
		-c /etc/smsd.conf
	eend ${?}
}

stop() {
	ebegin "Stopping smsd"
	start-stop-daemon --stop -n smsd
	eend ${?}
}
