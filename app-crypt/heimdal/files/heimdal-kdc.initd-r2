depend() {
	use net
	after logger
}

OPTIONS="${OPTIONS} --detach"

start() {
	ebegin "Starting Heimdal kdc"
	start-stop-daemon --start --quiet --exec \
		/usr/sbin/kdc -- ${OPTIONS# }
	eend $?
}

stop() {
	ebegin "Stopping Heimdal kdc"
	start-stop-daemon --stop --quiet --exec \
		/usr/sbin/kdc
	eend $?
}
