depend() {
	after localmount
	need device-mapper
}

stop() {
	# Try to remove any dm-crypt mappings
	if [ -x /usr/bin/veracrypt ]; then
		ebegin "Removing veracrypt mappings"
		! /usr/bin/veracrypt -l > /dev/null 2>&1  || /usr/bin/veracrypt -d
		eend $?
	fi
}
