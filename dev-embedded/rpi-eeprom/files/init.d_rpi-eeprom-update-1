# Set configuration in /etc/conf.d/rpi-eeprom-update

description="Raspberry Pi 4 bootloader and VL805 USB controller updater"
command="/usr/sbin/rpi-eeprom-update"
command_args="-a"

depend() {
	need localmount
}

stop() {
        # Nothing to stop
        return 0;
}
