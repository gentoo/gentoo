---
 TSDRPlugin_BladeRF/makefile   | 8 ++++----
 TSDRPlugin_HackRF/makefile    | 8 ++++----
 TSDRPlugin_UHD/makefile       | 6 +++---
 TSDRPlugin_librtlsdr/makefile | 8 ++++----
 4 files changed, 15 insertions(+), 15 deletions(-)

diff --git a/TSDRPlugin_BladeRF/makefile b/TSDRPlugin_BladeRF/makefile
index b78bf75..e3260a6 100644
--- a/TSDRPlugin_BladeRF/makefile
+++ b/TSDRPlugin_BladeRF/makefile
@@ -107,14 +107,14 @@ OBJFOLDER=obj
 # OS specific flags
 ifeq ($(OSNAME),LINUX)
 	CXXFLAGS+=-fPIC
-	# static version of the libraries if compiled LIBRARIES+=-Ldependencies/$(OSNAME)/$(ARCHNAME) -lpthread -lboost_system -lboost_thread -lboost_program_options -lboost_unit_test_framework -lbladeRF -lboost_serialization -lboost_filesystem  -lboost_date_time -lboost_regex -lrt
-	LIBRARIES+=-lboost_thread -lboost_program_options -lboost_system -lbladeRF
+	# static version of the libraries if compiled LIBRARIES+=-Ldependencies/$(OSNAME)/$(ARCHNAME) -lpthread -lboost_thread -lboost_program_options -lboost_unit_test_framework -lbladeRF -lboost_serialization -lboost_filesystem  -lboost_date_time -lboost_regex -lrt
+	LIBRARIES+=-lboost_thread -lboost_program_options -lbladeRF
 else ifeq ($(OSNAME),MAC)
 	CXXFLAGS+=-fPIC
-	LIBRARIES+=-lboost_thread-mt -lboost_program_options-mt -lboost_system-mt -lbladeRF
+	LIBRARIES+=-lboost_thread-mt -lboost_program_options-mt -lbladeRF
 else ifeq ($(OSNAME),WINDOWS)
 	LDFLAGS+=-Wl,--add-stdcall-alias
-	LIBRARIES+= -lboost_thread-mt -lboost_program_options-mt -lboost_system-mt -lbladeRF
+	LIBRARIES+= -lboost_thread-mt -lboost_program_options-mt -lbladeRF
 endif
 
