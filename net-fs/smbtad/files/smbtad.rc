CONFFILE=/etc/conf.d/${SVCNAME}.conf
PIDFILE=/var/run/${SVCNAME}.pid

depend() {
	before samba
	use dns logger
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --quiet \
		--exec /usr/bin/"${SVCNAME}" \
		-- -c "${CONFFILE}"
	eend ${?}
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --quiet --name "${SVCNAME}"
	eend ${?}
}
