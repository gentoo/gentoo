@@ -103,14 +105,20 @@ void runEmbeddedR(const core::FilePath& /*rHome*/,    // ignored on posix
    //
    structRstart rp;
    Rstart Rp = &rp;
-   R_DefParams(Rp) ;
-   Rp->R_Slave = FALSE ;
