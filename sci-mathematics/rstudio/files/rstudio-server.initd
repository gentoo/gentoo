start() {
	ebegin "Starting RStudio Server"
	start-stop-daemon --start --quiet --exec /usr/bin/rserver
	eend $?
}

stop() {
	ebegin "Stopping RStudio Server"
	start-stop-daemon --stop --quiet --retry=TERM/30/KILL/5 --name /usr/bin/rserver
	eend $?
}
