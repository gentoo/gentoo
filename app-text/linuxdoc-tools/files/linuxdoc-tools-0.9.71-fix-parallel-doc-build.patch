+
+
+%.txt: %.sgml
+	@echo "- Building txt docs" >&2
+	$(TMPDIR)/linuxdoc --backend=txt --filter --blanks=1 $<
+
+%.pdf: %.sgml
+	@echo "- Building pdf docs" >&2
+	$(TMPDIR)/linuxdoc --backend=latex \
+			--output=pdf \
+			--pass="\usepackage{times}" $<
+
+%.info: %.sgml
+	@echo "- Building info docs" >&2
+	$(TMPDIR)/linuxdoc --backend=info $<
+
