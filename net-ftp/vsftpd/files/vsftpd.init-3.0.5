instance=${RC_SVCNAME#*.}

: ${command=/usr/sbin/vsftpd}
command_background=true

if [ "${instance}" = "${RC_SVCNAME}" ]; then
	: ${pidfile=/run/vsftpd.pid}
else
	: ${command_args=/etc/vsftpd/${instance}.conf}
	: ${pidfile=/run/vsftpd.${instance}.pid}
fi

depend() {
	use dns logger net
}
