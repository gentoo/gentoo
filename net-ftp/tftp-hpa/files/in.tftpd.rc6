depend() {
	need net
}

start() {
	ebegin "Starting tftpd"
	/usr/sbin/in.tftpd -l ${INTFTPD_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping tftpd"
	start-stop-daemon --stop --exec /usr/sbin/in.tftpd
	eend $?
}
