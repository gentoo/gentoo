-		echo "Your linker is not supported" ; \
+		echo "Your linker ${LD_FLAVOR} version ${LD_VERSION} is not supported" ; \
 		exit 1 ; \
 	fi)
 
From cfd686de51494d3e34be896a91835657ccab37d4 Mon Sep 17 00:00:00 2001
