extra_commands="condrestart"
description_condrestart="Restart the service only if started already"

command="/usr/sbin/${SVCNAME}"
command_args="${OPTIONS}"
pidfile=/var/run/$SVCNAME.pid

depend() {
	need localmount
	use logger
}

condrestart() {
	service_started && restart
}
