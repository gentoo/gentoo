@@ -359,7 +359,7 @@ endif
 endif
 
 ifneq (,$(CURSES))
-        DEFS_CURSES = -DWCD_USECURSES
+        DEFS_CURSES = -DWCD_USECURSES $(shell ${PKG_CONFIG} --cflags-only-other ncursesw)
         LIB_CURSES  = $(CURSES)
 ifeq (os/2,$(OS))
         LIB_CURSES  += -ltinfo
@@ -384,9 +384,7 @@ endif
 # Each ncurses variant has its own include directory
