# $Id$

depend() {
	need lircd
}

start() {
	ebegin "Starting lircmd"
	start-stop-daemon --start --quiet --exec /usr/sbin/lircmd
	eend $?
}

stop() {
	ebegin "Stopping lircmd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/lircmd
	eend $?
}
