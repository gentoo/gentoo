depend() {
        need localmount
        after bootmisc
}

start() {
        ebegin "Starting Spacenav system daemon"

        start-stop-daemon --start --pidfile /var/run/spnavd.pid --exec /usr/bin/spacenavd
        eend $?
}

stop() {
        local retval

        ebegin "Stopping Spacenav system daemon"

        start-stop-daemon --stop --pidfile /var/run/spnavd.pid
        retval=$?

        eend ${retval}
        return ${retval}
}
