depend() {
	need net
}

start() {
	ebegin "Starting beanstalkd"
	/sbin/start-stop-daemon --start \
		--pidfile ${PIDFILE} \
		--exec ${BEANSTALKD_BINARY} \
		-- -d -p ${PORT} -l ${ADDR} -u ${USER}
	eend $?
}

stop() {
	ebegin "Stopping beanstalkd"
	start-stop-daemon --stop --quiet \
		--pidfile ${PIDFILE} \
		--exec ${BEANSTALKD_BINARY}
	eend $?
}
