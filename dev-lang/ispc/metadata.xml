<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
	<maintainer type="person">
		<email>mgorny@gentoo.org</email>
		<name>Michał Górny</name>
	</maintainer>
	<upstream>
		<remote-id type="github">ispc/ispc</remote-id>
	</upstream>
	<use>
		<flag name="cross">
			Build ISPC with cross target support.
		</flag>
		<flag name="gpu">
			Enable Level0 GPU support in ispcrt.
		</flag>
		<flag name="ispc_targets_ARM">
			ARM CPU target (includes AArch64)
		</flag>
		<flag name="ispc_targets_WebAssembly">
			WebAssembly backend
		</flag>
		<flag name="ispc_targets_X86">
			X86 CPU target (includes amd64)
		</flag>
		<flag name="ispc_targets_XE">
			Intel XE (GPU) target (32-bit and 64-bit)
		</flag>
		<flag name="ispcrt">
			Generate build targets for ISPC runtime.
		</flag>
		<flag name="level-zero">
			Enable oneAPI Level Zero GPU support in ispcrt.
		</flag>
		<flag name="openmp">
			Build with OpenMP task model.
		</flag>
		<flag name="tbb">
			Build with the Intel Threads Building Block task model (<pkg>dev-cpp/tbb</pkg>)
		</flag>
		<flag name="utils">
			Build utils.
		</flag>
	</use>
</pkgmetadata>
