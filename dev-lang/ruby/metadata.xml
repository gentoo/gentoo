<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="project">
    <email>ruby@gentoo.org</email>
    <name>Gentoo Ruby Project</name>
  </maintainer>
  <use>
