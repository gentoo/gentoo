name="Erlang Port Mapper Daemon"

command="/usr/bin/epmd"
command_user="epmd"
command_group="epmd"

command_background=yes
pidfile="/var/run/epmd.pid"

depend() {
	need net.lo
	before sshd
}

stop() {
	ebegin "Stopping ${name}"
	${command} -kill >/dev/null
	eend $?
}
