---
 Makefile | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/Makefile b/Makefile
index 70e26cb1..e6f61819 100644
--- a/Makefile
+++ b/Makefile
@@ -41,7 +41,7 @@ DESTBINDIR := $(DESTLIBDIR)/$(BINDIR)
 
 VPATH = $(SRCDIR)
 
-MANDB = $(shell which mandb)
