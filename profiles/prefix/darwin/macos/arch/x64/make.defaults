ARCH="x64-macos"
ACCEPT_KEYWORDS="~x64-macos"

CPU_FLAGS_X86="mmx mmxext sse sse2"

# multilib build stuff, single ABI (no multilib)
MULTILIB_ABIS="amd64"
DEFAULT_ABI="amd64"
ABI="amd64"
IUSE_IMPLICIT="abi_x86_64"
LIBDIR_amd64="lib"
# We use Clang, let it figure out what is the best to use
CFLAGS="-march=native"
