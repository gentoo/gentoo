depend() {
    use net
}

start() {
    ebegin "Starting monopd server"
    start-stop-daemon --start -q -b --exec GENTOO_DIR/monopd
    eend $?
}

stop() {
    ebegin "Stopping monopd server"
    start-stop-daemon --stop -q --exec GENTOO_DIR/monopd
    eend $?
}
