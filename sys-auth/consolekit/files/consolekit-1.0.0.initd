description="consolekit - tracks login sessions and seats"
pidfile="/var/run/ConsoleKit/pid"
command="/usr/sbin/console-kit-daemon"

depend() {
	need dbus
	use logger
}

start_pre() {
	checkpath -q -d -m 0755 /var/run/ConsoleKit
}
