depend() {
	need net
}

start() {
	ebegin "Starting pamsmbd"
	start-stop-daemon --start --quiet --exec /usr/sbin/pamsmbd
	eend $?
}

stop() {
	ebegin "Stopping pamsmbd"
	start-stop-daemon --stop --quiet --name pamsmbd
	eend $?
}
