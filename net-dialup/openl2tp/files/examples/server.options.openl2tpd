# usually placed at /etc/ppp/options.openl2tpd
name host
auth
plugin pppol2tp.so
refuse-mschap
require-mschap-v2
hide-password
ipcp-accept-local
ipcp-accept-remote
lcp-echo-interval 15
lcp-echo-failure 4
ms-dns 172.16.17.1
netmask 255.255.255.0
nodefaultroute
proxyarp
crtscts
noccp
nobsdcomp
nodeflate
noaccomp
nopcomp
novj
lock
