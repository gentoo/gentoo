# $Id$

depend() {
	need net
}

start() {
	ebegin "Starting rp-l2tpd"
	start-stop-daemon --start --quiet --exec /usr/sbin/rp-l2tpd
	eend $?
}

stop() {
	ebegin "Stopping rp-l2tpd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/rp-l2tpd
	eend $?
}
