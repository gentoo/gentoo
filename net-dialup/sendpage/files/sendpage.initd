depend() {
        need localmount
}

start() {
        ebegin "Starting sendpage"
        start-stop-daemon --start --exec /usr/bin/sendpage -- -bd
        eend ${?}
}

stop() {
        ebegin "Stopping sendpage"
        start-stop-daemon --stop -n sendpage
        eend ${?}
}

