diff --git a/libvmaf/src/meson.build b/libvmaf/src/meson.build
index 4c24af8..f78e359 100644
--- a/libvmaf/src/meson.build
+++ b/libvmaf/src/meson.build
@@ -321,10 +321,10 @@ if is_cuda_enabled
             input : _cu,
             command : [nvcc_exe, '--ptx', '@INPUT@', '-o', '@OUTPUT@' ,
                 '-I', './src',
-                '-I', '../src',
-                '-I', '../include',
-                '-I', '../src/feature',
-                '-I', '../src/' + cuda_dir,
+                '-I', '@0@/src'.format(libvmaf_src_root),
+                '-I', '@0@/include'.format(libvmaf_src_root),
+                '-I', '@0@/src/feature'.format(libvmaf_src_root),
+                '-I', '@0@/src/'.format(libvmaf_src_root) + cuda_dir,
             ]
         )
         ptx_files += {name : [t]}
