 else()
   if(EXISTS ${SELF_DIR}/OpenJPEGExports.cmake)
--- a/doc/CMakeLists.txt
+++ b/doc/CMakeLists.txt
@@ -44,7 +44,7 @@ if(DOXYGEN_FOUND)
 
