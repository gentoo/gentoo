+    if test $passed -gt 0
+    then
+    if test $failed -gt 0
+    then
+	AC_MSG_RESULT(no -- some components failed test)
+        have_szlib='no (failed tests)'
+    else
+	LIB_SZLIB='-lsz'
+	LIBS="$LIB_SZLIB $LIBS"
+	FMT_LIBS="$FMT_LIBS libsz.a"
+	AC_DEFINE(HAVE_LIBSZIP, 1, [Define to 1 if you have the SZLIB libraries])
+	AC_MSG_RESULT(yes)
+        have_szlib='yes'
+    fi
+    else
+        AC_MSG_RESULT(no)
+    fi
+fi
