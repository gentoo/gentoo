 #
+# Check for szlib
+#
+have_szlib='no'
+LIB_SZLIB=''
+if test "$with_szlib" != 'no'
+then
+    AS_MESSAGE([checking for szlib ......])
+    failed=0;
+    passed=0;
+    AC_CHECK_HEADERS(szlib.h, passed=`expr $passed + 1`,failed=`expr $failed + 1`)
+    AC_CHECK_LIB(sz, SZ_BufftoBuffCompress,passed=`expr $passed + 1`,failed=`expr $failed + 1`,)
