     screen,
     rgba (
-      lerp (c.r, to.r, percent),
-      lerp (c.g, to.g, percent),
-      lerp (c.b, to.b, percent),
-      lerp (c.a, to.a, percent)
+      rxlerp (c.r, to.r, percent),
+      rxlerp (c.g, to.g, percent),
