     {
-      c.a = lerp<int, int, int> (0, rgba::MAX_CC, c.a);
+      c.a = rxlerp<int, int, int> (0, rgba::MAX_CC, c.a);
       name += skip;
     }
 
@@ -981,10 +981,10 @@ rxvt_color::fade (rxvt_screen *screen, int percent, rxvt_color &result, const rg
