depend() {
	need net
	use logger
}

start() {
	ebegin "Starting LutelWall"
	/usr/sbin/lutelwall start
	eend $?
}

stop() {
	ebegin "Stopping LutelWall"
	/usr/sbin/lutelwall stop
	eend $?
}

restart() {
	stop
	start
}
