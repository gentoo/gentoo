+    configure_file("${CMAKE_CURRENT_SOURCE_DIR}/src/apulse.template"
+                   "${CMAKE_CURRENT_BINARY_DIR}/apulse" @ONLY)
+endif()
 
-install(FILES "${CMAKE_CURRENT_BINARY_DIR}/apulse" DESTINATION bin
