depend() {
	need alsasound
}

start() {
	ebegin "Loading sound font bank"
	${sfxload} -q "${sfxbank}"
	eend $? "Error at loading sound font bank ${sfxbank}"
}

stop() {
	ebegin "Unloading sound font bank"
	${sfxload} -i -q
	eend $? "Error at unloading sound font bank"
}
