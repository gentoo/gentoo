SLOT="0"
KEYWORDS="~amd64 ~ppc64"
IUSE="fix"

RDEPEND="
	dev-libs/openssl:0=
	dev-libs/libgit2:=
"

QA_FLAGS_IGNORED="usr/bin/${PN}"

# requires checkout of vuln db/network
RESTRICT="test"

src_configuire() {
	local myfeatures=( $(usev fix) )
	cargo_src_configure
}

src_install() {
	cargo_src_install
	einstalldocs
	dodoc audit.toml.example
}
