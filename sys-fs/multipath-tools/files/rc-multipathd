depend() {
	need localmount
	after modules
}

start() {
	ebegin "Starting multipathd"
	start-stop-daemon --start --quiet --exec /sbin/multipathd
	eend $?
}

stop() {
	ebegin "Stopping multipathd"
	start-stop-daemon --stop --quiet --pidfile /var/run/multipathd.pid
	eend $?
}
