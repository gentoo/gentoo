[ -e /etc/conf.d/nfs ] && . /etc/conf.d/nfs

rpc_bin=/usr/sbin/rpc.rquotad

depend() {
	use ypbind net
	need portmap
	after quota
}

start() {
	ebegin "Starting rpc.rquotad"
	${rpc_bin} ${OPTS_RPC_RQUOTAD}
	eend $?
}

stop() {
	ebegin "Stopping rpc.rquotad"
	start-stop-daemon --stop --quiet --exec ${rpc_bin}
	eend $?
}
