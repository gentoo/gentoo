depend() {
	need localmount
	use net
}

start() {
	ebegin "Starting box backup daemon"
	start-stop-daemon --start --exec /usr/sbin/bbackupd > /dev/null
	eend $?
}
 
stop() {
	ebegin "Stopping box backup daemon"
	start-stop-daemon --stop --exec /usr/sbin/bbackupd
	eend $?
}
