depend() {
	need net
}

start()	{
	ebegin "Starting Nylon"
	start-stop-daemon --start --quiet --pidfile /var/run/nylon.pid \
		--startas /usr/bin/nylon 
	eend $?
}

stop()	{
	ebegin "Stopping Nylon"
	start-stop-daemon --stop --quiet --pidfile /var/run/nylon.pid
	eend $?
}


