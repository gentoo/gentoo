<?xml version="1.0" encoding="UTF-8"?>
<forwarding>
    <option name="Direct">
    </option>
    <option name="ISP Proxy" selected="selected">
        <bypass>
            <simple-hostnames/>
            <host-mask>*.isp.com</host-mask>
            <host-mask>192.168.*</host-mask>
        </bypass>
        <proxy-chain>
            <proxy>
                <type>socks4</type><!-- available types: http, socks4, socks4a and socks5 -->
                <host>localhost</host>
                <port>9050</port>
            </proxy>
        </proxy-chain>
    </option>
</forwarding>
