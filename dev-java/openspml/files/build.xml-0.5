<?xml version="1.0" standalone="yes"?>
<project basedir="." default="jar">
  <target name="compile">
    <mkdir dir="bin"/>
    <javac srcdir="src" destdir="bin">
      <include name="**/*.java"/>
      <classpath>
        <fileset dir="lib">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>
  <target name="jar" depends="compile">
    <jar destfile="openspml.jar">
      <zipfileset dir="bin"/>
    </jar>
  </target>
</project>
