-	AC_MSG_RESULT([svn])
-	BF_want_development="yes"
+AC_MSG_CHECKING([for svn tree or exported source tree])
+AM_CONDITIONAL([SVN], [false])
+if test -f .svn/entries; then
+	AC_CHECK_PROG([HAVE_SVN], [svnversion], [yes], [no])
