+		AC_MSG_RESULT([svn])
+		BF_want_development="yes"
+	else
+		AC_MSG_WARN([svn tree found but svnversion was not found, continue as an exported tree])
+	fi
 else
 	AC_MSG_RESULT([exported])
 fi
