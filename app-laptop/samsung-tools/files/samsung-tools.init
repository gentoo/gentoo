depend() {
	need dbus
}

start() {
	ebegin "Setting up samsung-tools"
	dbus-send --system --print-reply=literal --dest='org.voria.SamsungTools.System' \
		'/' org.voria.SamsungTools.System.SetInitialDevicesStatus
	eend $?
}
