depend() {
	use dns net
}

start() {
	ebegin "Starting ${SVCNAME}"
 	start-stop-daemon --start --quiet --exec /usr/bin/ultimateircd \
		--chuid ${ULTIMATEIRCD_USER}
	eend $?
}

stop() {
	ebegin "Shutting down ${SVCNAME}"
	start-stop-daemon --stop --pidfile /var/run/ultimateircd/ircd.pid
	eend $?
}
