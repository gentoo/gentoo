PIDFILE="/var/run/dnrd.pid"

depend() {
	provide dns
	need net
}

start() {
	ebegin "Starting dnrd"
	/usr/sbin/dnrd $DNRD_OPTS &> /dev/null &
	eend $?
}

stop() {
	ebegin "Stopping dnrd"
	/usr/sbin/dnrd -k	
	eend $?
}

