depend() {
	need net
}

start() {
	ebegin "Starting DHCPv6 relay: dibbler-relay"
	/usr/sbin/dibbler-relay start
	eend $?
}

stop() {
	ebegin "Stopping DHCPv6 relay: dibbler-relay"
	/usr/sbin/dibbler-relay stop
	eend $?
}
