# $Id$

description="Open vSwitch virtual switch"

command="/usr/sbin/ovs-vswitchd"
command_args="
    --pidfile
    --detach
    --monitor
    ${OPTIONS} ${DATABASE}"
pidfile="/var/run/openvswitch/ovs-vswitchd.pid"

depend() {
	use ovsdb-server logger
}

start_pre() {
	checkpath -d "/var/run/openvswitch" -m 0750
}
