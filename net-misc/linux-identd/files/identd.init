depend() {
	need net
}

start() {
	ebegin "Starting identd"
	start-stop-daemon --start --quiet --name identd \
		--startas /usr/sbin/identd -- -d
	eend $?
}

stop() {
	ebegin "Stopping identd"
	start-stop-daemon --stop --quiet --name identd
	eend $?
}
