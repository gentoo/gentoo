depend() {
	need net
}

start() {
	ebegin "Starting rip98d"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/rip98d
	eend $?
}

stop() {
	ebegin "Stopping rip98d"
	start-stop-daemon --stop --quiet --exec /usr/sbin/rip98d
	eend $?
}
