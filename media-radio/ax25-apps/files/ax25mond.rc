depend() {
	need net
}

start() {
	ebegin "Starting ax25mond"
	start-stop-daemon --start --quiet --background --exec /usr/sbin/ax25mond
	eend $?
}

stop() {
	ebegin "Stopping ax25mond"
	start-stop-daemon --stop --quiet --exec /usr/sbin/ax25mond
	eend $?
}
