depend() {
	use logger clock hostname
	provide cron
}

start() {
	ebegin "Starting ${SVCNAME}"
	/usr/sbin/crond ${DCRON_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --quiet \
		--pidfile /var/run/crond.pid --exec /usr/sbin/crond
	local ret=$?
	rm -f /var/run/crond.pid
	eend ${ret}
}
