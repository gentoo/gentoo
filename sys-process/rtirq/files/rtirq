command="/usr/sbin/rtirq.sh"

extra_commands="status"

depend() {
    need localmount
    after alsasound logger
}

start() {
    ebegin "Starting rtirq"
    ${command} start
    eend $?
}

stop() {
    ebegin "Stopping rtirq"
    ${command} reset
    eend $?
}

status() {
    ${command} status
}
