description="Resource-specific view of processes"
pidfile="/var/run/atop.pid"
command="/usr/bin/atop"

start() {
	ebegin "Starting atop"
	start-stop-daemon --start --pidfile ${pidfile} \
		--exec /etc/atop/atop.daily
	eend $?
}
