start() {
	ebegin "Starting atop"
	start-stop-daemon --start --quiet --exec /etc/atop/atop.daily
	eend $?
}

stop() {
	ebegin "Stopping atop"
	start-stop-daemon --stop --exec /usr/bin/atop --pidfile /var/run/atop.pid
	eend $?
}
