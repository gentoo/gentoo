depend() {
	use net
#	need cman
}

start() {
	ebegin "Starting cluster resource manager"

	# recreate run-directory
	mkdir -p /var/run/cluster

	start-stop-daemon \
		--start \
		--quiet \
		--exec "/usr/sbin/rgmanager" \
		--pidfile "${PIDFILE}" \
		-- ${RGMGR_OPTS}
	eend $ret
}

stop() {
	ebegin "Shutting down cluster resource manager"
	start-stop-daemon \
		--stop \
		--pidfile "${PIDFILE}" \
		--retry 0
	eend $?
}
