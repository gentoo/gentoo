depend() {
    use net
}

start() {
	ebegin "Starting HSQL Database"
	hsqldb_enable=yes /var/lib/hsqldb/bin/hsqldb start
	eend $?
}

stop() {
	ebegin "Stopping HSQL Database"
	hsqldb_enable=yes /var/lib/hsqldb/bin/hsqldb stop
	eend $?
}
