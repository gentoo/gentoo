if [ -e ./env ] ; then source ./env ; else echo "failed to source env" ; fi
mkdir -p "/var/log/mysql/${SVCNAME}"
if [ ${S6_LOG_OPTIONS} ] ; then
	exec s6-log ${S6_LOG_OPTIONS}
else
	exec s6-log -b n20 S15000000 !"gzip -nq9" "/var/log/mysql/${SVCNAME}"
fi
