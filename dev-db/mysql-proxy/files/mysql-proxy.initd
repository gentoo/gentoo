depend() {
	need net
}

start() {
	ebegin "Starting MySQL Proxy"
	start-stop-daemon --start --quiet \
		--exec /usr/bin/mysql-proxy \
		-- --daemon --pid-file="${PIDFILE}" ${OPTS}
	eend $?
}

stop() {
	ebegin "Stopping MySQL Proxy"
	start-stop-daemon --stop --quiet \
		--pidfile "${PIDFILE}"
	eend $?
}
