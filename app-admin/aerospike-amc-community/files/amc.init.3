run_dir=${run_dir:-/run}

command="/opt/amc/amc"
command_progress="true"
retry='TERM/30/KILL/5'
pidfile=${run_dir}/${SVCNAME}.pid
user=${user:-root}
group=${group:-root}
start_stop_daemon_args="--user ${user} --group ${group}"

depend() {
	use net
}

start_post() {
	ewaitfile 60 "${pidfile}"
}
