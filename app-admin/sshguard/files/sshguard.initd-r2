command="/usr/sbin/sshguard"
pidfile="${SSHGUARD_PIDFILE:-/var/run/${SVCNAME}.pid}"
command_args="-i \"${pidfile}\" ${SSHGUARD_OPTS}"
start_stop_daemon_args="--background --wait ${SSHGUARD_WAIT:-999} --interpreted --quiet"

depend() {
	after iptables
	use logger
}
