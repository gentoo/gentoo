description='Start/stop mcelog in daemon mode'

pidfile="/var/run/mcelog.pid"
command="/usr/sbin/mcelog"
command_args="--daemon --pidfile ${pidfile} ${MCELOG_OPTS}"

depend() {
	after udev 
	need localmount
	use logging
}
