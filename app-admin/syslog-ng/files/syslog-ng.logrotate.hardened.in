#
# Syslog-ng logrotate snippet for Hardened Gentoo Linux
# contributed by Maciej Grela
#
# Updated bug #284669

# Generic
/var/log/debug /var/log/syslog /var/log/kern.log {
    delaycompress
    sharedscripts
    missingok
    postrotate
        @GENTOO_RESTART@ > /dev/null 2>&1 || true
    endscript
}

