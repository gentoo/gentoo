description="gkrell system monitor daemon"
pidfile="/var/run/gkrellmd.pid"
command="/usr/bin/gkrellmd"
command_args="${GKRELLMD_OPTS}"
command_background="true"

depend() {
	need net
	after lm_sensors
	after hddtemp
}
