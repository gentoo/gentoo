depend() {
	need dbus
}

start() {
	ebegin "Starting system-tools-backend"
	start-stop-daemon --start --exec /usr/sbin/system-tools-backends -- -D
	eend $?
}

stop() {
	ebegin "Stopping system-tools-backend"
	start-stop-daemon --stop --pidfile /var/run/system-tools-backends.pid
	eend $?
}

