pidfile="/var/run/sagan/sagan.pid"
command="/usr/bin/sagan"
command_args="-D \"${SAGAN_OPTS}\" -u \"${SAGAN_USER}\""

depend() {
      use logger mysql postgresql
      need localmount
}

start_pre() {
    checkpath -d -o sagan /run/sagan
    checkpath -p -o sagan -m 0644 /run/sagan/sagan.fifo
}
