depend() {
	need net
}

start() {
	ebegin "Starting openvassd (scanner)"
	start-stop-daemon --start --name openvassd \
		--exec /usr/sbin/openvassd \
		--pidfile /var/run/openvassd.pid
	eend $? 
}

stop() {
	ebegin "Stop openvassd (scanner)"
	start-stop-daemon --stop --name openvassd \
		--pidfile /var/run/openvassd.pid
	eend $?
}
