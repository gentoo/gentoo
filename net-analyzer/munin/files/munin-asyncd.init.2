command=/usr/libexec/munin/munin-asyncd
command_args="--fork"
pidfile="/run/munin-asyncd.pid"
command_background="yes"
command_user="munin-async"

depend() {
	need munin-node
	before cron
}

start_pre() {
	checkpath -d -o munin-async:munin -m 0750 /var/spool/munin-async
}

