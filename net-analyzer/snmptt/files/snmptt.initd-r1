depend() {
	need snmptrapd
}

start() {
	ebegin "Starting snmptt"
	start-stop-daemon --start --pidfile /run/snmptt.pid --exec /usr/sbin/snmptt
	eend
}

stop() {
	ebegin "Stopping snmptt"
	start-stop-daemon --stop --pidfile /run/snmptt.pid
	eend
}
