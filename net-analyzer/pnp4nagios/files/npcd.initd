extra_started_commands="reload"

command="/usr/bin/npcd"
command_args="-f /etc/pnp/npcd.cfg -d"

depend() {
	need net
}

reload() {
        ebegin "Reloading npcd"
        kill -HUP `pgrep npcd`
        eend $? "Failed to reload npcd"
}
