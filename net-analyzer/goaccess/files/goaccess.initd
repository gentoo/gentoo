command="/usr/bin/goaccess"
name="GoAccess"
description="Real-time web log analyzer"
config="${CONFIG:-/etc/goaccess/goaccess.conf}"
command_args="--real-time-html --daemonize -p $config ${OPTS}"
start_stop_daemon_args="-q"

depend() {
	need net
}
