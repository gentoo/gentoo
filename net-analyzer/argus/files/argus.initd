depend() {
	need net
}

start() {
	ebegin "Starting argus"
	start-stop-daemon --start --quiet --exec /usr/sbin/argus -- -d
	eend $? 
}

stop() {
	ebegin "Stopping argus"
	start-stop-daemon --stop --quiet --exec /usr/sbin/argus
	eend $?
}
