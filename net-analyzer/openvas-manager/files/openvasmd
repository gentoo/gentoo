depend() {
	need net openvassd
}

start() {
	ebegin "Starting openvasmd (manager)"
	start-stop-daemon --start --name openvasmd \
		--exec /usr/sbin/openvasmd \
		--pidfile /var/run/openvasmd.pid
	eend $?
}

stop() {
	ebegin "Stop openvasmd"
	start-stop-daemon --stop --name openvasmd \
		--pidfile /var/run/openvasmd.pid
	eend $?
}
