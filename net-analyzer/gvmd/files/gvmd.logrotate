# Daemon ignore HUP so we use 'copytruncate' instead of 'create' 
# with safe file size to prevent losing log entries.

/var/log/gvm/gvmd.log {
	compress
	missingok
	notifempty
	sharedscripts
	copytruncate
	maxsize 10M
}
