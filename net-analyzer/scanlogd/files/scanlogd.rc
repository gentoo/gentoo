depend() {
	need net
	use logger
}

start() {
	ebegin "Starting scanlogd"
	start-stop-daemon --start --quiet --exec /usr/sbin/scanlogd
	eend $?
}

stop() {
	ebegin "Stopping scanlogd"
	start-stop-daemon --stop --quiet --exec /usr/sbin/scanlogd
	eend $?
}
