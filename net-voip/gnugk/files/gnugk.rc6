depend() {
	need net
}

start() {
	ebegin "Starting H.323 Gatekeeper"
	start-stop-daemon --start --quiet --background \
		--exec /usr/sbin/gnugk -- ${OPTIONS}
	eend $?
}

stop() {
	ebegin "Stopping H.323 Gatekeeper"
	start-stop-daemon --stop --quiet --pidfile /var/run/gnugk.pid
	eend $?
}
