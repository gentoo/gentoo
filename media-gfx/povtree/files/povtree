# $Id$

which java > /dev/null 2>&1 && \
	java -jar /usr/lib/povtree/povtree.jar $* && \
	exit 0

echo "No \"java\" binary found in your PATH."
echo "You should run \"java-config\" to choose your default VM."
exit 1
