description="SANE network daemon"
pidfile="/var/run/saned.pid"
command="/usr/sbin/saned"
command_args="--user ${SANED_USER:-saned} \
	${SANED_ADDRESS:+--bind} ${SANED_ADDRESS} \
	${SANED_PORT:+--port} ${SANED_PORT} \
	${SANED_ARGS:---listen}"
command_args_background="--daemonize"
# pidfile created after forking process
start_stop_daemon_args="--wait 1000"
