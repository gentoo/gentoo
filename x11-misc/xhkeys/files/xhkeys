start() {
	ebegin "Starting xhkeys"
	start-stop-daemon --start --quiet --exec /usr/bin/xhkeys	
	eend $?
}

stop() {
	ebegin "Stopping xhkeys"
	start-stop-daemon --stop --quiet --exec /usr/bin/xhkeys
	eend $?
}
