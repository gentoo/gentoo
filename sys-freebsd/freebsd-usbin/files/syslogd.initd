depend() {
	provide logger
	need localmount
}

start() {
	ebegin "Starting System Logger"
	start-stop-daemon --start --quiet --exec /usr/sbin/syslogd \
		-- ${SYSLOGD_OPTS}
	eend $?
}

stop() {
       ebegin "Stopping System Logger"
       start-stop-daemon --stop --quiet --pidfile /var/run/syslog.pid
       eend $?
}



