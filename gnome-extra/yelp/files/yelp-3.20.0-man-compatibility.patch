 	-DDATADIR=\""$(datadir)"\" \
+	-DLIBEXECDIR=\"$(libexecdir)\" \
 	-DYELP_ICON_PATH=\"$(YELP_ICON_PATH)\" \
 	-DYELP_WEB_EXTENSIONS_DIR=\""$(pkglibdir)/"web-extensions\" \
 	-I$(top_builddir)/libyelp
