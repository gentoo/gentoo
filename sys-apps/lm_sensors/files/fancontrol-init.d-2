CONFIG=/etc/fancontrol

depend() {
	need localmount
	use lm_sensors
}

command=/usr/sbin/fancontrol
command_arguments="${CONFIG}"
start_stop_daemon_args="--background"
pidfile=/var/run/fancontrol.pid

start_pre() {
	if [ ! -f ${CONFIG} ]; then
		eerror "Configuration file ${CONFIG} not found"
		return 1
	fi
}
