depend() {
	after bootmisc
}

start() {
	ebegin "Starting hd-idle"
	start-stop-daemon --start --exec /usr/sbin/hd-idle -- ${HD_IDLE_OPTS}
	eend $?
}

stop() {
	ebegin "Stopping hd-idle"
	start-stop-daemon --stop --exec /usr/sbin/hd-idle
	eend $?
}
