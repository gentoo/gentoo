extra_started_commands="flush"

pidfile="/var/run/collectl.pid"
command="/usr/bin/collectl"
command_args="-D"

flush() {
	einfo "Flushing collectl buffers"
	start-stop-daemon --signal USR1 --pidfile ${pidfile}
	eend $?
}
