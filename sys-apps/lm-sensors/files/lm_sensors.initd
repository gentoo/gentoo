command="/usr/bin/sensors"

depend() {
	need localmount
	after modules-load
}

start() {
	ebegin "Initializing sensors"
	${command} --set >/dev/null 2>&1
	eend $?
}

stop() {
	# Nothing to stop
	return 0;
}
