command=/usr/sbin/uuidd
command_args_foreground="-FP"
command_user=uuidd
pidfile=/run/uuidd/uuidd.pid

depend() {
	need clock localmount
}

start_pre() {
	checkpath -d -m 2755 -o uuidd:uuidd /run/uuidd &&
	checkpath -d -m 0755 -o uuidd:uuidd /var/lib/libuuid
}
