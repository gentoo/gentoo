start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --quiet --exec /sbin/ncad
	eend ${?}
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon --stop --retry 5 --quiet --exec /sbin/ncad
	eend ${?}
}
