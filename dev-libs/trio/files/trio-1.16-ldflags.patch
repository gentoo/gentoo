Subject: [PATCH] Fix LDFLAGS

--- a/Makefile.in
+++ b/Makefile.in
@@ -7,7 +7,7 @@ TARGETSHLIB	= $(TARGETLIB:.a=.so)
 TARGETSHLIB_M	= $(TARGETSHLIB).2
 TARGETSHLIB_V	= $(TARGETSHLIB_M).0.0
 TARGETINCS	= trio.h triop.h triodef.h trionan.h triostr.h
