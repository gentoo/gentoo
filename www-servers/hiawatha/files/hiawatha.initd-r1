depend() {
	need net
}

start() {
	ebegin "Starting ${SVCNAME}"
	start-stop-daemon \
		--start \
		--exec "/usr/sbin/hiawatha" \
		--pidfile "@HIAWATHA_PID_DIR@/hiawatha.pid"
	eend $?
}

stop() {
	ebegin "Stopping ${SVCNAME}"
	start-stop-daemon \
		--stop \
		--exec "/usr/sbin/hiawatha" \
		--pidfile "@HIAWATHA_PID_DIR@/hiawatha.pid"
	eend $?
}
